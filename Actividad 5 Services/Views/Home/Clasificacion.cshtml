@model Actividad_5_Services.Models.ViewModels.ClaseViewModel
@{
    Layout = "_Layout";
}


    <h1>@Model.NombreClasificacion</h1>

    <ul class="especies">
        @foreach (var especie in Model.Especies)
        {
            <li>
                <div>
                    <img src="~/especies/@(especie.Id).jpg">
                </div>
                <h2>@especie.Especie</h2>
                <p><label>Habitat: </label>@especie.Habitat</p>
                <p><label>Peso: </label>@especie.Peso</p>
                <p><label>Tamaño: </label>@especie.Tamaño</p>
                <p>@especie.Observaciones</p>
            </li>
        }
        </ul>

